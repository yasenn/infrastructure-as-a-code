all:
  children:
    zookeepers:
      hosts:
%{~ for index, public_ip in content }
        zookeeper${index}:
          ansible_host: ${public_ip}
%{~ endfor }
  vars:
    ansible_user:  ubuntu
    ansible_ssh_private_key_file: ~/.ssh/id_rsa  
    zookeeper_hosts:
    %{ for index, node in yandex_compute_instance.zookeeper ~}
- host: ${ node.name }
      id: ${ index }
    %{ endfor ~}
